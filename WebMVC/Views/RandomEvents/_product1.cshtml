@model WebMVC.Models.Common.CatalogEvent


@{
    ViewData["Title"] = "Index";
}

  
    <form asp-controller="Catalog" asp-action="Index" method="get" asp-route-id="@Model.Id">
        <input class="esh-catalog-send" type="image" height="200" width="250" src="@Model.PictureUrl" />
    </form>

<form asp-controller="Cart" asp-action="AddToCart" id="eventBoxStyling">
    <input class="esh-catalog-button" type="submit" value="[ ADD TO CART ]" />
    <div class="esh-catalog-topic">
        <span>@Model.CatalogTopic</span>
    </div>
    <div class="esh-catalog-description">
        <span>@Model.Description</span>
    </div>
    <input type="hidden" asp-for="@Model.CatalogTopic" name="topic" />
        <input type="hidden" asp-for="@Model.CatalogTopicId" name="topicId" />
        <input type="hidden" asp-for="@Model.CatalogFormat" name="format" />
        <input type="hidden" asp-for="@Model.CatalogFormatId" name="formatId" />
        <input type="hidden" asp-for="@Model.Description" name="description" />
        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.Title" name="title" />
        <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
        @*<input type="hidden" asp-for="@Model.Price" name="price" />*@
</form>

